<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="400.0" stylesheets="@Components.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Talkie.Controllers.CreateGroupController">
   <children>
      <VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="10.0">
         <children>
            <Label text="Create a Chatroom!" textFill="#ff8200">
               <font>
                  <Font name="Segoe UI Black" size="26.0" />
               </font>
            </Label>
            <Label alignment="CENTER" prefHeight="60.0" prefWidth="473.0" text="Insert the name of the group" textAlignment="CENTER" textFill="#39a9ff">
               <font>
                  <Font name="Segoe UI Black" size="22.0" />
               </font>
            </Label>
            <TextField fx:id="txtGroupName" prefHeight="44.0" prefWidth="550.0" promptText="Group name">
               <font>
                  <Font name="Segoe UI Black" size="20.0" />
               </font></TextField>
            <Label fx:id="lblResult" text="Group Created" textAlignment="CENTER" textFill="#ff8200">
               <font>
                  <Font name="Segoe UI Black" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
